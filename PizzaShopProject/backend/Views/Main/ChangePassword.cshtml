@model ChangePassword
@{
  Layout = "~/Views/Shared/_SecondLayout.cshtml";
  ViewData["Title"] = "Page Title";
}
<div class="row text-Users-title fs-2">Change Password </div>
        <form asp-controller="Main" asp-action="DoChangePassword"  class="change-password-container d-flex flex-column" method="post">
            <div class="row my-5">
                <div class=" col-12 w-100 m-1">
                    <p>Enter a new password to update your account credentials</p>
                </div>
                <div class="col-12 w-100 m-2">
                    <input asp-for="CurrentPassword" type="password" name="CurrentPassword" placeholder="current Password*" class="icon-password">
                </div>
                <div class="col-12 w-100 m-2">
                    <input asp-for="NewPassword" type="password" placeholder="New Password*" class="icon-password">
                </div>
                <div class="col-12 w-100 m-2">
                    <input asp-for="ConfirmNewPassword" type="password" placeholder="Confirm New Password*" class="icon-password">
                </div>
                <div class="col-12 w-100">
                    <button type="submit" class="cancel-permissions">
                        Submit
                    </button>
                    <button class="save-users-button">
                        Cancel
                    </button>
                </div>
            </div>
        </form>
      </div>
    </div>