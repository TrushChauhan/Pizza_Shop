@{
    var user = ViewBag.User;
}
<!DOCTYPE html>
<html>

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>assignment</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Main Sidebar -->
            <div class="col-md-3 col-lg-2 d-none d-md-block sidebar">
                <div class="sidebar-body">
                    <div class="col d-flex">
                        <div class="row w-50"><img class="" src="~/images/logos/pizzashop_logo.png " alt=""></div>
                        <div class="row fs-5 align-items-center">
                            <p class="brand-name-dashboard">PIZZASHOP</p>
                        </div>
                    </div>
                    <div class="col">
                        <ul class="d-flex flex-column">
                            <li class="sidebar-item m-2">
                                <i class="fas fa-chart-line me-2"></i>
                                <span><a asp-controller="Main" asp-action="Dashboard"
                                        class="text-decoration-none text-secondary ">Dashboard</a></span>
                            </li>
                            <li class="sidebar-item m-2">
                                <i class="fas fa-users me-2"></i>
                                <span class="color-primary"><a asp-controller="Main" asp-action="Users"
                                        class="text-decoration-none">Users</a></span>
                            </li>
                            <li class="sidebar-item m-2">
                                <i class="fas fa-user-shield me-2"></i>
                                <span><a asp-controller="Main" asp-action="Roles" class="text-decoration-none">role and
                                        permissions</a></span>
                            </li>
                            <li class="sidebar-item m-2">
                                <i class="fas fa-pizza-slice me-2"></i>
                                <span><a asp-controller="Menu" asp-action="Index"
                                        class="text-decoration-none">Menu</a></span>
                            </li>
                            <li class="sidebar-item m-2">
                                <i class="fas fa-table me-2"></i>
                                <span><a asp-controller="SectionsAndTables" asp-action="Index" class="text-decoration-none">tables and
                                        sections</a></span>
                            </li>
                            <li class="sidebar-item m-2">
                                <i class="fas fa-receipt me-2"></i>
                                <span><a asp-controller="Tax" asp-action="Taxes" class="text-decoration-none">taxes and fees</a></span>
                            </li>
                            <li class="sidebar-item m-2">
                                <i class="fas fa-shopping-cart me-2"></i>
                                <span><a href="dashboard.html" class="text-decoration-none">Orders</a></span>
                            </li>
                            <li class="sidebar-item m-2">
                                <i class="fas fa-user-friends me-2"></i>
                                <span><a href="dashboard.html" class="text-decoration-none">Customers</a></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-9 col-lg-10 p-0 main-content vh-100">
                <div class="navbar-profile w-100 py-2 px-3 d-flex align-items-center">
                    <button class="btn toggle-sidebar d-md-none" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#sidebar" aria-controls="sidebar">
                        <img src="~/images/menu-item-icon.png" alt="" height="30px">
                    </button>

                    <div class="dropdown ms-auto">
                        <div class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <img class="profile-pic" alt="Profile" height="40" style="cursor: pointer;">
                        </div>
                        <form>
                            <ul class="dropdown-menu dropdown-menu-end p-2">
                                <!-- Profile Header -->
                                <li class="d-flex align-items-center mb-3">
                                    <img alt="Profile" class="rounded-circle profile-pic" height="50">
                                    <div class="ms-3">
                                        <h6 class="mb-0" id="user-name"></h6>
                                    </div>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center py-2" asp-controller="Main"
                                        asp-action="MyProfile">
                                        <i class="fas fa-user-circle me-3"></i>
                                        My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center py-2" asp-controller="Main"
                                        asp-action="ChangePassword">
                                        <i class="fas fa-lock me-3"></i>
                                        Change Password
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Main" asp-action="Logout"
                                        class="dropdown-item d-flex align-items-center py-2" type="submit">
                                        <i class="fas fa-sign-out-alt me-3"></i>
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </form>
                    </div>
                </div>
                <div class="mx-4">
                    @RenderBody()
                </div>
                <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="sidebarLabel">PIZZASHOP</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <div class="col">
                            <ul class="d-flex flex-column">
                                <li class="sidebar-item m-2">
                                    <i class="fas fa-chart-line me-2"></i>
                                    <span><a class="text-decoration-none" asp-controller="Main" asp-action="Dashboard">Dashboard</a></span>
                                </li>
                                <li class="sidebar-item m-2">
                                    <i class="fas fa-users me-2"></i>
                                    <span class="color-primary"><a asp-controller="Main" asp-action="Users"
                                            class="text-decoration-none">Users</a></span>
                                </li>
                                <li class="sidebar-item m-2">
                                    <i class="fas fa-user-shield me-2"></i>
                                    <span><a asp-controller="Main" asp-action="Roles" class="text-decoration-none">role and
                                            permissions</a></span>
                                </li>
                                <li class="sidebar-item m-2">
                                    <i class="fas fa-pizza-slice me-2"></i>
                                    <span><a asp-controller="Menu" asp-action="Index" class="text-decoration-none">Menu</a></span>
                                </li>
                                <li class="sidebar-item m-2">
                                    <i class="fas fa-table me-2"></i>
                                    <span><a class="text-decoration-none" asp-controller="SectionsAndTables" asp-action="Index">tables and
                                            sections</a></span>
                                </li>
                                <li class="sidebar-item m-2">
                                    <i class="fas fa-receipt me-2"></i>
                                    <span><a asp-controller="Tax" asp-action="Taxes" class="text-decoration-none">taxes and
                                            fees</a></span>
                                </li>
                                <li class="sidebar-item m-2">
                                    <i class="fas fa-shopping-cart me-2"></i>
                                    <span><a href="dashboard.html" class="text-decoration-none">Orders</a></span>
                                </li>
                                <li class="sidebar-item m-2">
                                    <i class="fas fa-user-friends me-2"></i>
                                    <span><a href="dashboard.html" class="text-decoration-none">Customers</a></span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>


</body>
<style>
    .sidebar-item a {
        color: grey;
        text-decoration: none;
        font-weight: 500;
    }
    .sidebar-item.active a {
        color: rgba(5,101,158,255);
        font-weight: bold;
    }
    .sidebar-item {
        padding: 10px;
        border-radius: 5px;
    }
    .sidebar-item.active {
        background-color: rgba(216,239,247,255);
    }
</style>


<script>
      document.addEventListener("DOMContentLoaded", function () {
        let currentPath = window.location.pathname.toLowerCase();
        document.querySelectorAll(".sidebar-item").forEach(item => {
            let link = item.querySelector("a");
            if (link && link.getAttribute("href") && currentPath.includes(link.getAttribute("href").toLowerCase())) {
                item.classList.add("active");
            }
        });
    });
    $(document).ready(function () {
        $.ajax({
            url: '/Main/GetUserName',
            type: 'GET',
            success: function (data) {
                $('#user-name').text(data.name);
                $('.profile-pic').attr('src', data.imagePath);
            },
            error: function () {
                console.log("Error fetching user details");
            }
        });
    });
</script>
@await Component.InvokeAsync("Notyf")
@RenderSection("Scripts", required: false)